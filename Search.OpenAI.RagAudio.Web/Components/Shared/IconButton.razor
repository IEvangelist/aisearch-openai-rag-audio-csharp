<div class="mb-4 flex flex-col items-center justify-center">
    <button @onclick="@OnClick" 
        class="h-12 w-12 inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 px-4 py-2 rounded-md text-primary-foreground bg-purple-500 hover:bg-purple-600">
        <img src="@IconPath" class="mr-2 h-6 w-6 text-current" />
    </button>
</div>

@code {
    [Parameter, EditorRequired]
    public required string IconPath { get; set; }

    [Parameter, EditorRequired]
    public required EventCallback<MouseEventArgs> OnClick { get; set; }
}
