<header class="bg-white dark:bg-gray-700 px-10 py-4 shadow-lg flex items-center justify-between">
    <div class="flex items-center">
        <nav class="flex ml-3 font-semibold text-gray-600 dark:text-gray-300 text-md">
            <img src="logo.svg" alt="Azure logo" class="h-8 w-8" />
        </nav>
    </div>
    <div class="flex items-center">
        <div>
            <button @onclick="@ShowOpenAIDialogAsync" title="Settings"
                    class="px-4 py-2 text text-gray-800 dark:text-gray-500 rounded-xl flex items-center gap-2">
                <svg class="lucide lucide-settings mr-2 h-6 w-6 !stroke-slate-800 dark:!stroke-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z" />
                    <circle cx="12" cy="12" r="3" />
                </svg>
            </button>
        </div>

        <div>
            <a href="https://github.com/IEvangelist/aisearch-openai-rag-audio-csharp" target="_blank" title="GitHub repository"
               class="px-4 py-2 text rounded-xl flex items-center gap-2">
                <svg class="lucide lucide-github mr-2 h-6 w-6 !stroke-slate-800 dark:!stroke-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                    <path d="M9 18c-4.51 2-5-2-7-2" />
                </svg>
            </a>
        </div>

        <div class="order-last">
            <DarkModeToggle />
        </div>
    </div>
</header>

<Dialog @ref="_dialog">
    <Content>
        <Select Headline="Microphone" Options="_microphoneOptions" OnSelected="@OnMicrophoneSelected" TItem="IOptionValue" />
        <Select Headline="Speaker" Options="_speakerOptions" OnSelected="@OnSpeakerSelected" TItem="IOptionValue" />
        <Select Headline="Voice" Options="_voiceOptions" OnSelected="@OnVoiceSelected" TItem="IOptionValue" />
    </Content>
</Dialog>
