@if (IsListening)
{
    <div class="flex items-center">
        <div class="relative h-6 w-6 overflow-hidden">
            <div class="absolute inset-0 flex items-end justify-around">
                @for (var i = 0; i < 4; ++i)
                {
                    <div key="@(i)"
                         class="w-1 rounded-full bg-purple-600 opacity-80"
                         style="animation: barHeight@((i % 3) + 1) 1s ease-in-out infinite; animation-delay: @(i * 0.1)s;" />
                }
            </div>
        </div>
        <p class="text mb-4 ml-2 mt-6">Conversation in progress</p>
    </div>
}
else
{
    <p class="text mb-4 mt-6">
        Ask anything about Contoso employee benefits
    </p>
}

@code {
    [Parameter, EditorRequired]
    public bool IsListening { get; set; }
}
